{{! using unsafeTitle here to avoid double encoding because the title helper does its own }}
{{title (t 'myscreen.page_title' nodeTitle=this.model.taskInstance.value.unsafeTitle)}}
<div class='container' local-class='MyScreen'>
    {{#if this.loading}}
        {{t 'myscreen.loading'}}
    {{else}}
        <div local-class='MyScreen__editor'>
            <h2 local-class='MyScreen__header'>{{t 'myscreen.header'}}</h2>
            <div class='form-group row'>
                <label class='col-sm-2' for='param1'>{{t 'myscreen.param1'}}</label>
                <div data-test-param1 class='col-sm-10'>
                    {{input
                        name='param1'
                        placeholder=(t 'myscreen.placeholders.param1')
                        class='form-control'
                        value=this.param1
                        type='text'
                    }}
                </div>
            </div>
            <div class='text-right' local-class='MyScreen__buttons'>
                <OsfButton data-test-save-button
                           @type='success'
                           @onClick={{action this.save}}>
                    {{t 'myscreen.save_button'}}
                </OsfButton>
            </div>
        </div>
    {{/if}}
</div>
